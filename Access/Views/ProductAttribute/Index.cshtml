@model IEnumerable<Access_Models.ProductAttribute>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/CategoryManagement.css" />
</head>


<div class="a-container-content">

    <div class="a-category-management">
        <div class="a-category-table-container">
            <div class="a-category-list">
                <div class="a-category-list-item a-category-list-text">Product Attribute List</div>
                <div class="a-category-list-item">
                    <a asp-controller="ProductAttribute" asp-action="Upsert" class="a-category-create-cat-btn a-category-list-btn">
                        <i class="fa-solid fa-plus"></i> &nbsp; Create new Product Attribute
                    </a>
                </div>
            </div>
            <br /><br />
            @if (Model.Count() > 0)
            {
                <div class="a-category-list">
                    <table class="a-category-table">
                        <thead>
                            <tr>
                                <td width="25%">
                                    Attribute Type
                                </td>
                                <td width="25%">
                                    Attribute Value
                                </td>
                                <td width="15%">
                                    product id
                                </td>
                                <td width="15%">
                                    is in stock
                                </td>
                                <td width="20%"></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr class="a-category-table-tr-pd">
                                    <td width="25%">@obj.AttributeType.Name</td>
                                    <td width="25%">@obj.AttributeValue.Value</td>
                                    <td width="15%">@obj.ProductId</td>
                                    <td width="15%">@obj.IsInStock</td>
                                    <td width="20%" class="a-category-table-last-column">
                                        <div role="group" class="a-category-table-btn-group">
                                            <div class="a-category-table-btn-list">
                                                <a asp-controller="ProductAttribute" asp-route-Id="@obj.Id" asp-action="Upsert" class="a-category-table-btn">
                                                    <i class="fa-solid fa-pen-alt a-category-table-btn-icon-edit"></i>
                                                </a>

                                                <a asp-controller="ProductAttribute" asp-route-Id="@obj.Id" asp-action="Delete" class="a-category-table-btn">
                                                    <i class="fa-solid fa-trash-can a-category-table-btn-icon-del"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="a-category-list">No product attributies exists.</div>
            }

        </div>
    </div>

</div>
